extends layout

block content
  h1= title

  form(method='POST' action='' enctype="multipart/form-data")
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name of model kit' name='name' required='true' value=(undefined===modelkit ? '' : modelkit.name) )
    div.form-group
      label(for='grade') Grade:
      select#grade.form-control(type='select', placeholder='Select grade' name='grade' required='true')
        for g in grade
            option(value=g._id) #{g.grade_name}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', name='price' required='true' value=(undefined===modelkit ? '' : modelkit.price))
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', name='description' required='true') #{undefined===modelkit ? '' : modelkit.description}
    div.form-group
      label(for='series') Series:
        select#series.form-control(type='select', placeholder='Select series' name='series' required='true')
          for s in series
              option(value=s._id) #{s.series_name}
    div.form-group
      label(for='numberInStock') Number in stock:
      input#numberInStock.form-control(type='number', name='numberInStock' reqired='true' value=(undefined===modelkit ? '' : modelkit.numberInStock))
    div.form-group
      label(for='') Image(Optional):
      input#model_image.form-control(type='file', name='model_image')
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg