extends layout

block content
  h1 #{title}: #{grade.grade_name}
  p= grade.grade_description

  if grade_modelkits.length

    p #[strong Delete the following model kits before attempting to delete this grade.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Model kits:

      dl
      each modelkit in grade_modelkits
        dt
          a(href=modelkit.url) #{modelkit.name}
        dd #{modelkit.description}

  else
    p Do you really want to delete this Grade category?

    form(method='POST' action='')
      div.form-group
        input#gradeid.form-control(type='hidden',name='gradeid', required='true', value=grade._id )

      button.btn.btn-primary(type='submit') Delete